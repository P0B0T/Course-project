<Window
    x:Class="Курсач.AddAndEditWindows.AddAndEditSuppliers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Курсач.AddAndEditWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="292"
    Background="#490155"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <StackPanel>

        <Label Content="Название компании:" />

        <TextBox Name="NameCompany" />

        <Label Content="Контактное лицо (не обязательно):" />

        <TextBox Name="ContactPerson" />

        <Label Content="Номер телефона (не обязательно):" />

        <TextBox Name="TelephoneNumber" />

        <Label Content="Адрес:" />

        <TextBox Name="Adress" />

        <Label Content="Электронная почта:" />

        <TextBox Name="Email" />

        <Grid Margin="0,10,0,0">

            <Button
                Name="AddOrEdit"
                Width="100"
                HorizontalAlignment="Left" />

            <Button
                Name="Exit"
                Width="100"
                Margin="175,0,0,0"
                Click="Exit_Click"
                Content="Отмена" />

        </Grid>

    </StackPanel>

</Window>
